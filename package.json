{
	"name": "volyfequickdev",
	"displayName": "Voly FE Quick Dev",
	"description": "A quick dev tool to be used in Voly FE codebase (only works on Svelte file)",
	"icon": "icon/voly.png",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.82.0"
	},
	"publisher": "Voly",
	"pricing": "Free",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "volyfequickdev.enable",
				"title": "Voly Frontend Quick Dev: Enable"
			},
			{
				"command": "volyfequickdev.disable",
				"title": "Voly Frontend Quick Dev: Disable"
			},
			{
				"command": "volyfequickdev.is-a-fe-repo",
				"title": "Voly Frontend Quick Dev: Check if the current workspace is a frontend repo"
			},
			{
				"command": "volyfequickdev.folder-explorer.remove-dev-builds-folder",
				"title": "Voly Frontend Quick Dev: Remove the dev-builds folder"
			},
			{
				"command": "volyfequickdev.folder-explorer.remove-entry",
				"title": "Remove"
			},
			{
				"command": "volyfequickdev.folder-explorer.refresh-entry",
				"title": "Refresh",
				"icon": {
					"light": "icon/light/refresh.svg",
					"dark": "icon/dark/refresh.svg"
				}
			},
			{
				"command": "volyfequickdev.share-local.add",
				"title": "Add",
				"icon": {
					"light": "icon/light/add.svg",
					"dark": "icon/dark/add.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "volyfequickdev-viewSection",
					"title": "Voly FE Quick Dev",
					"icon": "./icon/voly.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "volyfequickdev-devbuilds-explorer",
				"contents": "No built files found."
			}
		],
		"views": {
			"volyfequickdev-viewSection": [
				{
					"id": "volyfequickdev-devbuilds-explorer",
					"name": "Folder Explorer",
					"icon": "./icon/voly.svg",
					"contextualTitle": "Voly FE Dev Builds Folder Explorer"
				},
				{
					"id": "volyfequickdev-sharelocal",
					"name": "Share Local",
					"icon": "./icon/voly.svg",
					"contextualTitle": "Share your changes on local server with others on test2"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "volyfequickdev.folder-explorer.refresh-entry",
					"when": "view == volyfequickdev-devbuilds-explorer",
					"group": "navigation"
				},
				{
					"command": "volyfequickdev.share-local.add",
					"when": "view == volyfequickdev-sharelocal",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "volyfequickdev.folder-explorer.remove-entry",
					"when": "view == volyfequickdev-devbuilds-explorer && viewItem == devBuildsFolder"
				}
			]
		}
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@bitbucket.org/voly/local-development.git"
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/cors": "^2.8.14",
		"@types/express": "^4.17.18",
		"@types/glob": "^7.2.0",
		"@types/hyco-ws": "^1.0.4",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@types/vscode": "^1.82.0",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"ts-loader": "^9.2.8",
		"typescript": "^4.6.4",
		"webpack": "^5.88.2",
		"webpack-cli": "^4.9.2"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"hyco-ws": "^1.0.5"
	}
}
